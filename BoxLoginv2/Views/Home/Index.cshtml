        <script type="text/javascript">

        const myinputfield = document.querySelector("#myinputfield");

        function text() {
            myinputfield.value = myinputfield.value + "after clicking";
        }
            

            var onloadCallback = function () {
                //alert("grecaptcha is ready!");
                 grecaptcha.render('recaptcha', {
                'sitekey': '6LdfgygTAAAAAFR9LY0ewUWPbK-UTDQ037xQmiIb',
                'callback': function(response){
                        console.log(response);
                        if(response != null || ''){
                            console.log("response not null");
                            var text = document.getElementById('txtcaptcha');
                            text.value += response;
                        }
                    }   

                })
            };

        </script>

        
        
    </head>

